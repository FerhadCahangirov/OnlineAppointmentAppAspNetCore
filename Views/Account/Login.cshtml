@model LoginViewModel

<h1 class="text-center">Login</h1>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input type="text" class="form-control" asp-for="UserName">
                <span class="form-text text-muted" asp-validation-for="UserName"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="text" class="form-control" asp-for="Password">
                <span class="form-text text-muted" asp-validation-for="Password"></span>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

