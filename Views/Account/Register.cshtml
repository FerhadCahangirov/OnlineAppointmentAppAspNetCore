@model RegisterViewModel

<h1 class="text-center">Register</h1>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input type="text" class="form-control" asp-for="UserName">
                <span class="form-text text-muted" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="form-text text-muted" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input type="text" class="form-control" asp-for="Surname">
                <span class="form-text text-muted" asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email">
                <span class="form-text text-muted" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color"></label>
                <input type="color" class="form-control" asp-for="Color">
                <span class="form-text text-muted" asp-validation-for="Color"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="text" class="form-control" asp-for="Password">
                <span class="form-text text-muted" asp-validation-for="Password"></span>
            </div>

            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" asp-for="IsDentist">
                <label asp-for="IsDentist" class="form-check-label"></label>

            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

